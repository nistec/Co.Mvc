@model Natam.Data.Entities.AccountsView
@{
    Layout = "~/Views/_View.cshtml";
    Page.Title = "Building";
    string UserName = ViewBag.UserName;
}

@section head {
    @Scripts.Render("~/bundles/jqx")
    <script type="text/javascript" src="~/Scripts/jq/plagins/blockUI.js"></script>
}
@section scripts {

 <script type="text/javascript">

     $(document).ready(function () {

         $("#AccountId").val(@Model.AccountId);
         $("#AccountName").val('@Model.AccountName');
         //$("#AccountType").val(@Model.AccountType);
         $("#CompanyName").val('@Model.CompanyName');
         //$("#ContactName").val(Model.ContactName);
         $("#Street").val('@Model.Street');
         $("#City").val('@Model.City');
         $("#ZipCode").val('@Model.ZipCode');
         $("#AccountPhone1").val('@Model.AccountPhone1');
         //$("#AccountPhone2").val('Model.AccountPhone2');
         //$("#AccountPhone3").val('Model.AccountPhone3');
         $("#AccountEmail").val('@Model.AccountEmail');
         $("#Fax").val('@Model.Fax');
         $("#WebSite").val('@Model.WebSite');
         //$("#AccountDetails").val('Model.AccountDetails');
                  
      });
      </script>
}

<hgroup class="title">
    <h3 class="rightPan">הגדרת לקוח.</h3>
            <div style="text-align:right; font-size:130%; font-weight:bold"><span>שם הסוכן : </span><span>@UserName</span></div>

</hgroup>

<div class="clear"></div>
<div class="global-view">
    <div class="container">
        <form action="" method="post">
            <div>
 
                <div>
                    <div class="form-group">
                        <label class="column">
                            קוד לקוח:</label>
                        <input id="AccountId" name="AccountId" type="text" class="text-mid" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            שם הלקוח:</label>
                        <input id="AccountName" name="AccountName" type="text" class="text-mid" />
                    </div>
                   <div class="form-group">
                        <label class="column">
                            שם חברה:</label>
                        <input id="CompanyName" name="CompanyName" type="text" class="text-mid" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            סוג לקוח:</label>
                        <select id="AccountType" name="AccountType" class="text-mid">
                            <option value="1">לקוח</option>
                            <option value="2">בעלים</option>
                            <option value="3">משקיע</option>
                            <option value="4">דייר</option>
                            <option value="5">בעל מקצוע</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="column">
                            כתובת:</label>
                        <input id="Street" name="Street"  type="text" class="text-mid" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            עיר:</label>
                        <input id="City" name="City" type="text" class="text-mid" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            מיקוד:</label>
                        <input id="ZipCode" name="ZipCode" type="text" class="text-mid" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            מספר טלפון:</label>
                        <input id="AccountPhone1" name="AccountPhone1" type="text" class="text-mid" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            מספר פקס:</label>
                        <input id="Fax" name="Fax" type="text" class="text-mid" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            דאר אלקטרוני:</label>
                        <input id="AccountEmail" name="AccountEmail" type="text" class="text-mid" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            אינטרנט:</label>
                        <input id="WebSite" name="WebSite" type="text" class="text-mid" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            הערות:</label>
                        <input id="AccountDetails" name="AccountDetails"  type="text" class="text-mid" />
                    </div>
                    <div class="form-group">
                        <input type="hidden" class="text-mid" />
                    </div>
                    <div style="height: 5px"></div>
                    <div>
                        <input class="btn-default btn2" type="button" value="עדכון" />
                        <input class="btn-default btn2" type="button" value="הוספת אנשי קשר" />

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

