@model Pro.Data.Entities.UsersView
@{
    Layout = "~/Views/Admin/_ViewAdmin.cshtml";
    Page.Title = "Building";
}
@section head {
}

<hgroup class="title">

    <h3 class="rightPan">משתמשי מערכת.</h3>

</hgroup>
<div class="clear"></div>

<div class="global-view">
    <div class="container">

        <form action="" method="post">
            <div>
                <div>
                    <div class="form-group">
                        <label class="column">
                            שם משתמש:</label>
                        <input type="text" class="text-mid" value="@Model.UserName" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            תפקיד:</label>
                        <input type="text" class="text-mid" value="@Model.Autorization" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            טלפון נייד:</label>
                        <input type="text" class="text-mid" value="@Model.Cell" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            דואל:</label>
                        <input type="text" class="text-mid" value="@Model.Email" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            טלפון :</label>
                        <input type="text" class="text-mid" value="@Model.Phone" />
                    </div>
                   <div class="form-group">
                        <label class="column">
                            פקס :</label>
                        <input type="text" class="text-mid" value="@Model.Fax" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                        </label>
                        <input type="checkbox" value="כן" />
                        <span>פעיל</span>
                        <input type="checkbox" />
                        <span>האם לשלוח דיוורים</span>
                    </div>

                    <h3>הרשאות</h3>


                    <div class="form-group">
                        <label class="column">
                            שם כניסה:</label>
                        <input type="text" class="text-mid" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            סיסמא:</label>
                        <input type="text" class="text-mid" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            אישור סיסמא:</label>
                        <input type="text" class="text-mid" />
                    </div>
                    <div class="form-group">
                        <label class="column">
                            סוג הרשאה:</label>
                        <select class="text-mid"></select>
                    </div>
                    <div class="form-group">
                        <input type="hidden" class="text" />
                    </div>
                    <div class="form-group">
                        <input type="hidden" class="text" />
                    </div>
                    <div style="height: 5px"></div>
                    <div>
                        <input type="button" value="עדכון" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
