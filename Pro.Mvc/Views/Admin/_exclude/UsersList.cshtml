@model IEnumerable<Natam.Data.Entities.UsersView>
@using GridMvc.Html
@{
    Layout = "~/Views/Admin/_ViewAdmin.cshtml";
    Page.Title = "Building";
}
@section head {
       <link rel="stylesheet" href="~/Content/css/Gridmvc.css">
    <script type="text/javascript" src="~/Scripts/plagins/gridmvc.min.js"></script>
}


<hgroup class="title">
    <h3 class="rightPan">משתמשי מערכת.</h3>
</hgroup>

<div class="rightPan">
    <ul class="toolbar">
        <li>
            </li>
        <li><a href="#">רענון</a></li>
    </ul>
</div>
<div class="clear"></div>
<div class="global-view">
    <div class="container">

        <div dir="rtl" style="clear: both">


            @Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add(c => c.UserId).Titled("הצג").Sanitized(false).Encoded(false).RenderValueAs(o => Html.ActionLink("הצג", "UserInfo", "Admin", new { UserId = o.UserId }, new { @class = "viewDialog" }).ToHtmlString());
                        columns.Add(c => c.UserName).Titled("שם משתמש");
                        columns.Add(c => c.Cell).Titled("טלפון נייד");
                        columns.Add(c => c.Email).Titled("דואר אלקטרוני");
                        columns.Add(c => c.Phone).Titled("טלפון");
                        columns.Add(c => c.Fax).Titled("פקס");
                        //columns.Add(c => c.LoginName).Titled("שם כניסה");
                        //columns.Add(c => c.Pass).Titled("סיסמא");
                        columns.Add(c => c.Creation).Titled("נוצר").Format("{0:dd/MM/yyyy}");
                    }).WithPaging(15).Sortable()

 @*           @Grid.GetHtml(
        tableStyle: "MyTable",
        headerStyle: "columnHead",
        alternatingRowStyle: "altRow",
        columns: Grid.Columns(
        Grid.Column("RowId", "User Id"),
                    Grid.Column("Related", "Related"),
                    Grid.Column("Mode", "Mode"),
                    Grid.Column("Method", "Name"),
                    Grid.Column("ActTime", "Act Time"),
                    Grid.Column("Status", "Status")
        )
    )*@
        </div>

    </div>
</div>
