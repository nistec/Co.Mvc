<link rel="stylesheet" href="~/Scripts/bootstrap/css/bootstrap.css">


}
@section featured {
}
 
@section scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            

            app_jqxcombos.createDropDownAdapter("AccountId", "AccountName", "AccountList", '/Admin/GetAccountsList', 0, 120, false);
 


            $("#btnAccountMng").on('click', function () {
                var id = $("#AccountList").val();
                if (id)
                    app_query.doPost('/Admin/DoVirtualLoginSet', { 'accountId': $("#AccountList").val() });
            });

            $("#btnAccountCancel").on('click', function () {
                    app_query.doPost('/Admin/DoVirtualLoginCancel');
            });
            


            $("#btnCacheClearAll").on('click', function () {
                if (confirm("פעולה זו תסיר את כל התכנים מהזכרון, האם להמשיך ?")) {
                    app_query.doPost('/Cms/CmsClearAllCache', {});
                }
            });


            @*if ('@ViewBag.UserInfo.UserRole' == 9) {
                var link = app_const.accountsLink;
                $('#adminAccount').append(link);
            }*@
        });
    </script>
}




