@model Pro.Data.Registry.RegistryPage
@{
    Layout = "~/Views/Shared/_ViewRegistry.cshtml";
    
}

@section cmsHeader {

@*<hgroup class="title">
    <h3 class="rightPan">@Model.Title</h3>
</hgroup>*@

<div id="cmsHeader">
    @Html.Raw(Model.Header)
</div>


        @*<h1 class="navbar-brand navbar-brand_">
    @Model.Title
   </h1>*@


}

@section head {

    @Scripts.Render("~/bundles/jqx")
    <script type="text/javascript" src="~/Scripts/app/registry/signup-def.js"></script>
    <link rel="stylesheet" href="~/Scripts/app/app-form.css" type="text/css" />
    <style type="text/css">
        html, body {
            margin: 0;
            padding: 0;
        }

        #main-page {
            width: 100%;
            display: block;
            border: 1px solid red;
        }

        #main-container {
            margin-right: auto;
            margin-left: auto;
            width: 400px;
            border: 1px solid green;
        }

        #jqxWidget {
            /*margin: 0 auto;*/
            margin-right: 10px;
            display: block;
            direction: rtl;
        }
    </style>
}

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {

            var def = new app_signup_def(JSON.parse('@Model.AccountId'));

            $('#reset').on('click', function () {
                location.reload();
            });

            $('#accSubmit').on('click', function (e) {

                e.preventDefault();
                def.doSubmit();
            });

            $('#accCancel').on('click', function (e) {
                $('#accForm')[0].reset();
                $('#accForm').jqxValidator('hide');
            });
            $('#aConfirm').on('click', function (e) {
                app_dialog.dialogIframe("/Registry/_Statement?f=" + '@Model.Folder', "60%", "400px", "הצהרה");
            });
            

        });

    </script>
@Html.Raw(Model.HiddenScript)
}



@*<div id="main-page" class="global-view">

    <div id="main-container" class="container-rtl">*@
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div id="jqxWidget">
                <div id="accWindow">
                    <div id="accHeader">
                        <h4 id="accTitle" style="font-weight: bold;">@Model.Title</h4>
                    </div>
                    <div id="accBody">
                        <form class="accForm" id="accForm" method="post" action="/Signup/UpdateMember">
                            <div style="direction: rtl; text-align: right">

                                <input type="hidden" id="RecordId" name="RecordId" value="0" />
                                <input type="hidden" id="AccountId" name="AccountId" value="" />
                                <input type="hidden" id="Categories" name="Categories" value="" />

                                <div id="tab-personal">
                                    <div class="form-group">
                                        <label class="column">
                                            תעודת זהות :
                                        </label>
                                        <input id="MemberId" name="MemberId" type="text" class="text-mid" />
                                    </div>
                                    <div class="form-group">
                                        <label class="column">
                                            שם פרטי :
                                        </label>
                                        <input id="FirstName" name="FirstName" type="text" class="text-mid" />
                                    </div>
                                    <div class="form-group">
                                        <label class="column">
                                            שם משפחה :
                                        </label>
                                        <input id="LastName" name="LastName" type="text" class="text-mid" />
                                    </div>
                                    <div class="form-group">
                                        <label class="column">
                                            כתובת :
                                        </label>
                                        <input id="Address" name="Address" type="text" class="text-mid" />
                                    </div>
                                    <div class="form-group">
                                        <label class="column">
                                            עיר :
                                        </label>
                                        <div id="City" name="City"></div>
                                    </div>
                                    <div class="form-group">
                                        <label class="column">
                                            מגדר:
                                        </label>
                                        <div id="Gender" name="Gender"></div>
                                    </div>
                                    <div class="form-group">
                                        <label class="column">
                                            תאריך לידה:
                                        </label>
                                        <div id="Birthday" name="Birthday"></div>
                                    </div>
                                    <div class="form-group">
                                        <label class="column">
                                            טלפון נייד:
                                        </label>
                                        <input id="CellPhone" name="CellPhone" type="text" class="text-mid" />
                                    </div>
                                    <div class="form-group">
                                        <label class="column">
                                            טלפון:
                                        </label>
                                        <input id="Phone" name="Phone" type="text" class="text-mid" />
                                    </div>
                                    <div class="form-group">
                                        <label class="column">
                                            דאר אלקטרוני:
                                        </label>
                                        <input id="Email" name="Email" type="text" class="text-mid" />
                                    </div>
                                </div>
                                <div id="tab-notes">
                                    <div class="form-group">
                                        <label class="column">
                                            קוד הפנייה:
                                        </label>
                                        <input id="ReferralCode" name="ReferralCode" type="text" class="text-mid" />
                                    </div>
                                    <div class="form-group">
                                        <input id="AutoCharge" name="AutoCharge" type="checkbox" /> <span>מאשר חיוב חוזר</span>
                                    </div>
                                    <div class="form-group">
                                        <input id="CreditCardOwner" name="CreditCardOwner" type="checkbox" /> <span>בעלים כרטיס אשראי</span>
                                    </div>
                                    <div class="form-group">
                                        <input id="ConfirmAgreement" name="ConfirmAgreement" type="checkbox" /> <a id="aConfirm" href="#">אישור הצהרה</a>
                                    </div>

                                </div>

                                <div style="height: 5px"></div>
                                <div>
                                    <input id="accSubmit" class="btn-default btn7" type="button" value="עדכון" />
                                    <input id="accCancel" class="btn-default btn7" type="button" value="ניקוי" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div id="cmsPlaceHolder1">
                        @Html.Raw(Model.Ph1)
                    </div>
                    <div id="cmsPlaceHolder2">
                        @Html.Raw(Model.Ph2)
                   </div>
                    <div id="cmsPlaceHolder3">
                        @Html.Raw(Model.Ph3)
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
    <!--end of content-wrapper-->
@section cmsFooter {
    @Html.Raw(Model.Footer)
}

