@model Pro.Mvc.Models.ResultModel
@{

    string Title = Model.Title;
    string Message = Model.Message;
}
    <script src="~/Scripts/jq/jquery.min.js"></script>

<div style="text-align:center; direction:rtl; font-family:Arial; font-size:16px">
    <h4>@Title</h4>
    <textarea readonly="readonly" rows="4" cols="40" style="text-align:center; direction:rtl; font-family:Arial; font-size:16px;border:none; overflow:hidden">
     @Message
    </textarea>
    <div id="promptNext"></div>
</div>
<script type="text/javascript">

    doPromptNext();
    function doPromptNext() {
        var status = '@Model.Status';
        if (status == 1) {
            $('#promptNext').append('<input type="button" id="btnTrigger" value="המשך"/>');
            setTimeout(function () {
                window.parent.trigger_Prompt(status);
            }, 1000);
        }
    };

    $(document).ready(function () {
        $('#btnTrigger').click(function () {
            window.parent.trigger_Prompt(1);
        });
    });
</script>