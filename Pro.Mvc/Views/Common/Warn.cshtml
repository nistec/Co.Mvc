@model Pro.Mvc.Models.ResultModel
@{
    Layout = "~/Views/Shared/_ViewCo.cshtml";
    ViewBag.Title = "Result";
    
    string Title = Model.Title;
    string Message = Model.Message;
}


<div class="global" style="text-align: center">
    <div class="center-box">
        <div class="container">
            <img src="~/Images/warning.png" alt="warning" />
            <h4>@Title</h4>
            <p style="text-align:center; direction:rtl; font-family:Arial; font-size:16px;border:none; overflow:hidden">
                @Message
                <br />
                <br />
                <a href='javascript:parent.history.back()'>חזרה</a>
                @*<a href="@HttpContext.Current.Request.UrlReferrer.OriginalString">חזרה</a>*@
                <br />
                <br />
                <a href="~/home/Main">לדף הראשי</a>
            </p>
        </div>


        <div class="footer">
            
        </div>

    </div>
</div>
