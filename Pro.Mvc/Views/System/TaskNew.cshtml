@section scripts {

    <script type="text/javascript">

    var wizard;
    var task_def;

    $(document).ready(function () {
        JSON.useDateParser();
        var theme = 'Arctic';
        var uinfo = JSON.parse('@userInfo');

        wizard = new app_wiztabs();
        wizard.displayStep(1);



        //$("#ColorFlag").jqxDropDownButton();
       // var source = [
       //{ text: "פתוח", value: 1 },
