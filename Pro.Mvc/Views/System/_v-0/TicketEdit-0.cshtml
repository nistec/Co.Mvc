@section scripts {

    <script type="text/javascript">

    var wizard;
    var ticket_def;

    $(document).ready(function () {
        JSON.useDateParser();
        var theme = 'Arctic';
        var uinfo = JSON.parse('@userInfo');
        
        var ticketid = @rcdid
        wizard = new app_wiztabs();
        wizard.displayStep(1);

        ticket_def=app_ticket.init(JSON.parse('@dataModel'), uinfo, true);

        $('#reset').on('click', function () {
            location.reload();
        });
        
        $('#fcClear').on('click', function (e) {
            //app_messenger.Post("הודעה");
            $('#fcForm')[0].reset();
            $('#fcForm').jqxValidator('hide');
        });

        $('#fcCancel').on('click', function (e) {
            ticket_def.doCancel();
        });
        $('#fcSubmit').on('click', function (e) {
            ticket_def.doSubmit();
        });

        $('#ticket-item-update').click(function () {
            var iframe = wizard.getIframe();
            if (iframe && iframe.triggerSubmit) {
                iframe.triggerSubmit();
            }
        });
        $('#ticket-item-cancel').click(function () {
            wizard.wizHome();
        });

    });
</script>
}

